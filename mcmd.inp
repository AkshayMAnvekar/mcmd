! Douglas Franz, Space group, USF
! all input params are defined only by the second column
! 2017

name			    mcmd_development
mode	 		    mc ! mc or md
checkpoints_option  off
ewald_es  on
rd_lrc              on	
input_atoms	 pdbs/8h2bssp.pdb  pdbs/mof5_h2bssp.pdb   ! PDB ONLY 
potential_form 		ljespolar   !ljespolar 	!phast2    !!lj
com_option		    off   	! center of mass

! P.B.C. will be 1/2 of these lengths for each dimension
x_length	25.669  60    27.4876  150.97371 !  in A   
y_length    25.669  47.005  60    27.4876  150.97371
z_length	25.669    60    27.4876  150.97371


! radial distribution option
radial_dist         off   ! turns on/off radial distribution function. off for speed-up
radial_bin_size     0.1  ! in A
radial_max_dist     10.0 ! in A (maybe a good value is 1/2 box length)
radial_centroid     Cu   ! element name
radial_counterpart  H2G   ! element name to get distance of w/centroid
radial_file         radialdist.dat 


! MONTE CARLO ONLY ======================================
ensemble		nvt      uvt   !nvt   npt   

mc_corrtime		    10
finalstep		    1000000
temperature 	    77.0   !77.0  ! K
pressure		    1.0     ! atm

insert_factor		0.667     ! uVT: prob to insert/delete in uVT
rotate_prob         0.5
displace_factor     2.5
rotate_angle_factor  360.0
! =======================================================
