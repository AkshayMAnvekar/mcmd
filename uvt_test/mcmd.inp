! all input params are defined only by the second column
! 2017

name			    mcmd_development
mode	 		    mc ! mc or md
checkpoints_option off 
ewald_es            on
rd_lrc              on
input_atoms	../pdbs/MPM1+1CO2.pdb   mnformate+c2h2.pdb  rhtmof9+c2h2.pdb    mof5+h2bss.pdb  pdbs/50ne.pdb    pdbs/mof5+h2.pdb    ! PDB ONLY 
potential_form 		ljes   polar  polar   !ljespolar 	!phast2    !!lj
com_option		    off   	! center of mass

!simulated_annealing on
!simulated_annealing_schedule 0.97
!simulated_annealing_target 60.0

!basis1 22.2866 0.0 0.0
!basis2 -11.1433 19.3007618 0.0
!basis3 0.0 0.0 25.6328


!carbasis 27.1979   27.1979   30.9998 90.0000   90.0000  120.0000
!carbasis 23.441   20.414   29.911  90.00 91.44  90.00
!carbasis 27.934   27.934   41.081  90.00  90.00  90.00
carbasis 25.669 25.669 25.669 90 90 90
!x_length 25.669
!y_length 25.669
!z_length 25.669





! MONTE CARLO ONLY ======================================
ensemble		    uvt

mc_corrtime	        25
finalstep		    5000000
temperature 	    77.0  !77.0  ! K
!pressure		    0.5     ! atm

insert_factor		0.667     ! uVT: prob to insert/delete in uVT
displace_factor     2.5
rotate_angle_factor 360.0
