name			    mcmd_development
mode	 		    mc ! mc or md
checkpoints_option off 
input_atoms  ../pdbs/mof5+h2bssp.pdb   MPM1+1CO2.pdb   mnformate+c2h2.pdb  rhtmof9+c2h2.pdb    mof5+h2bss.pdb  pdbs/50ne.pdb    pdbs/mof5+h2.pdb    ! PDB ONLY 

free_volume  11595.4

!!input_atoms ../pdbs/MPM1.pdb
