! all input params are defined only by the second column
! 2017

name			    mcmd_development
mode	 		    mc ! mc or md
checkpoints_option off 
input_atoms  restart.pdb  ../pdbs/rhtmof9.pdb  ../pdbs/mof5+h2bssp.pdb     ! PDB ONLY 

free_volume  11595.4

potential_form 		ljespolar   polar   polar  polar   !ljespolar 	!phast2    !!lj
xyz_traj_option on
sorbate_name h2_bssp
fugacity_single h2


!carbasis 25.669 25.669 25.669 90 90 90
carbasis 27.934 27.934 41.081 90 90 90

radial_dist off
radial_centroid O1
radial_counterpart H2G


! MONTE CARLO ONLY ======================================
ensemble		    uvt

mc_corrtime	        25
finalstep		    5000000
temperature   77 	    298  ! K
pressure      1.0
insert_factor		0.667     ! uVT: prob to insert/delete in uVT
displace_factor     2.5
rotate_angle_factor 360.0
! =======================================================
