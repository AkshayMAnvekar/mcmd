mc_corrtime	        25
finalstep		    5000000
temperature 	  77    298  ! K
pressure		    1     ! atm

insert_factor		0.667     ! uVT: prob to insert/delete in uVT
displace_factor     2.5
rotate_angle_factor 360.0
