! Douglas Franz, Space group, USF
name			    mcmd_development
mode	 		    md ! mc or md
checkpoints_option  off

md_rotations on
		
input_atoms 8h2bssp.pdb  ! PDB ONLY 
potential_form 		ljes   !ljespolar 	!phast2    !!lj
com_option		    off   	! center of mass

! P.B.C. will be 1/2 of these lengths for each dimension
x_length	15	25.699  47.005  60    27.4876  150.97371 !  in A   
y_length	15      25.669  47.005  60    27.4876  150.97371
z_length	15     25.669  47.005  60    27.4876  150.97371

! radial distribution option
radial_dist         on   ! turns on/off radial distribution function. off for speed-up
radial_bin_size     0.1  ! in A
radial_max_dist     10.0 ! in A (maybe a good value is 1/2 box length)
radial_centroid     H2G   ! element name
radial_counterpart  H2G   ! element name to get distance of w/centroid
radial_file         radialdist.dat 

temperature 273.15 

! MOLECULAR DYNAMICS ONLY ===============================
md_dt			    0.2  ! fs
md_ft			    200000  ! fs
md_corrtime		    200      ! steps
!md_init_vel         0    ! A / fs^2
md_mode             molecular      atomic ! lets all atoms move free 
md_rotations        on
